{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "PENDING",
        "ACCEPTED",
        "DENIED"
      ]
    },
    "userRef": {
      "type": "string",
      "description": "User ref as assigned in service link (will only be present when status is accepted)"
    }
  },
  "required": [
    "status",
    "replied"
  ]
}